<div class="container">
    {{#each articles}}
        <div class="row mb-2" id="index-content">
            <div class="col bg-light p-2">
                <img class="img-thumbnail rounded float-left mr-3 mb-3 album-cover" src="{{image}}">
                <h3>{{album}}</h3>
                <h5>{{artist}}</h5>
                <small>Review by <strong>{{author}}</strong></small>
                <p class="mt-3">{{review}}... <a href="{{link}}" target="_blank">READ MORE</a></p>
                <div class="text-right">
                    <button data-id="{{_id}}" class="btn add-comment" data-toggle="modal">Comments</button>
                    {{!-- Modal to display comments --}}
                    <div class="modal fade text-left" id="comments-modal-{{_id}}" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="commentModalLabel">Comments for {{album}}</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="name-input">Name</label>
                                            <input type="text" class="form-control" id="name-input" placeholder="Jane Doe">
                                        </div>
                                        <div class="form-group">
                                            <label for="comment-input">Comment</label>
                                            <textarea class="form-control" id="comment-area" rows="3"></textarea>
                                        </div>
                                        <button class="btn submit-comment" data-id="{{_id}}">Add Comment</button>
                                    </form>
                                    <div id="comment-div-{{id}}">
                                        {{!-- Existing comments are dynamically rendered here --}}
                                        {{#each comments}}
                                            <p>
                                                {{name}}
                                            </p>
                                            <p>{{body}}</p>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button data-id="{{_id}}" class="btn unsave-article">Remove</button>
                </div>
            </div>
        </div>
    {{/each}}
    {{#unless articles}}
        <h3>You have no saved articles.</h3>
    {{/unless}}
</div>