<div class="container">
  {{!-- Each individual article card --}}
  {{#each articles}}
  <div class="row mb-2" id="index-content">
    <div class="col bg-light p-2 border">
      <img class="img-thumbnail rounded float-left mr-3 mb-3 album-cover" src="{{image}}" />
      <h3>{{album}}</h3>
      <h5>{{artist}}</h5>
      <small>Review by <strong>{{author}}</strong></small>
      <p class="mt-3">{{review}}... <a href="{{link}}" target="_blank">READ MORE</a></p>
      <div class="text-right">
        <button data-id="{{_id}}" class="btn btn-comments add-comment" data-toggle="modal">Comments ({{comments.length}})</button>
        {{!-- Modal to display comments --}}
        <div class="modal fade text-left comments-modal" id="comments-modal-{{_id}}" tabindex="-1" role="dialog"
          aria-labelledby="commentModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Comments for {{album}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                {{!-- Form for user to input name and comment --}}
                <form>
                  <div class="form-group">
                    <label for="name-input">Name</label>
                    <input type="text" class="form-control" id="name-input-{{_id}}" />
                  </div>
                  <div class="form-group">
                    <label for="comment-input">Comment</label>
                    <textarea class="form-control" id="comment-area-{{_id}}" rows="2"></textarea>
                  </div>
                  <button class="btn btn-save submit-comment" data-id="{{_id}}">Add Comment</button>
                </form>
                {{!-- Section to display any existing comments --}}
                {{#if comments}}
                <hr />
                <div data-id="{{_id}}" class="comment-div">
                  {{#comments}}
                  <div class="m-1 p-2 px-3 bg-light rounded">
                    <button type="button" data-id="{{_id}}" class="btn btn-sm btn-remove delete-comment float-right delete-comment">
                      X
                    </button>
                    <small>
                      {{name}} says:
                    </small>
                    <p>{{body}}</p>
                  </div>
                  {{/comments}}
                </div>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        <button data-id="{{_id}}" class="btn btn-remove unsave-article">Remove</button>
      </div>
    </div>
  </div>
  {{/each}}
  {{!-- Only display message if there are no saved articles --}}
  {{#unless articles}}
  <h3 class="text-center">You have no saved articles.</h3>
  {{/unless}}
</div>