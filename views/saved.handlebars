<div class="container">
    {{#each articles}}
        <div class="row mb-2" id="index-content">
            <div class="col bg-light p-2">
                <img class="img-thumbnail rounded float-left mr-3 mb-3 album-cover" src="{{image}}">
                <h3>{{album}}</h3>
                <h5>{{artist}}</h5>
                <small>Review by <strong>{{author}}</strong></small>
                <p class="mt-3">{{review}}... <a href="{{link}}" target="_blank">READ MORE</a></p>
                <div class="text-right">
                    <button data-id="{{_id}}" class="btn btn-info add-comment" data-toggle="modal">Comments</button>
                    {{!-- Modal to display comments --}}
                    <div class="modal fade text-left comments-modal" id="comments-modal-{{_id}}" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="commentModalLabel">Comments for {{album}}</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="name-input">Name</label>
                                            <input type="text" class="form-control" id="name-input-{{id}}" placeholder="Jane Doe">
                                        </div>
                                        <div class="form-group">
                                            <label for="comment-input">Comment</label>
                                            <textarea class="form-control" id="comment-area-{{id}}" rows="2"></textarea>
                                        </div>
                                        <button class="btn submit-comment" data-id="{{_id}}">Add Comment</button>
                                    </form>
                                    <hr />
                                    <div data-id="{{_id}}" class="comment-div bg-light p-2">
                                        {{#comments}}
                                            <button type="button" data-id="{{_id}}" class="btn btn-danger btn-sm float-right delete-comment">X</button><small>
                                                {{name}} says:
                                            </small>
                                            <p>{{body}}</p>
                                        {{/comments}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button data-id="{{_id}}" class="btn btn btn-danger unsave-article">Remove</button>
                </div>
            </div>
        </div>
    {{/each}}
    {{#unless articles}}
        <h3 class="text-center">You have no saved articles.</h3>
    {{/unless}}
</div>